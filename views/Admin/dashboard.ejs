<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .sidebar {
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      z-index: 100;
      padding: 48px 0 0;
      box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    .sidebar-sticky {
      position: relative;
      top: 0;
      height: calc(100vh - 48px);
      padding-top: .5rem;
      overflow-x: hidden;
      overflow-y: auto;
    }
    .nav-link {
      color: #333;
    }
    .nav-link.active {
      color: #007bff;
    }
    .stats-card {
      border-left: 4px solid #007bff;
    }
  </style>
</head>
<body>
  <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/admin">Admin Panel</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
      <span class="navbar-toggler-icon"></span>
    </button>
  </header>

  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="/admin">
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/users">
                Users
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/posts">
                Posts
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/requirements">
                Requirements
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/comments">
                Comments
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/contacts">
                Contact Messages
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/orders">
                Orders
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/products">
                Products
              </a>
            </li>
          </ul>
          <hr>
          <div class="px-3 py-3">
            <strong>Logged in as:</strong><br>
            <%= adminUser.name %><br>
            <a href="/logout" class="btn btn-sm btn-danger mt-2">Logout</a>
          </div>
        </div>
      </nav>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <a href="/" class="btn btn-sm btn-outline-secondary">View Site</a>
            </div>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4 mb-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">Users</h5>
                <h2 class="card-text"><%= userCount %></h2>
                <a href="/admin/users" class="btn btn-primary btn-sm">Manage Users</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">Posts</h5>
                <h2 class="card-text"><%= postCount %></h2>
                <a href="/admin/posts" class="btn btn-primary btn-sm">Manage Posts</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">Requirements</h5>
                <h2 class="card-text"><%= requirementCount %></h2>
                <a href="/admin/requirements" class="btn btn-primary btn-sm">Manage Requirements</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">Comments</h5>
                <h2 class="card-text"><%=commentCount%></h2>
                <a href="/admin/comments" class="btn btn-primary btn-sm">Manage Comments</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">Contact Messages</h5>
                <h2 class="card-text"><%=contactMessage%></h2>
                <a href="/admin/contacts" class="btn btn-primary btn-sm">View Messages</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">Orders</h5>
                <h2 class="card-text"><%=orderCount%></h2>
                <a href="/admin/orders" class="btn btn-primary btn-sm">View Orders</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">Products</h5>
                <h2 class="card-text"><%=productCount%></h2>
                <a href="/admin/products" class="btn btn-primary btn-sm">View Products</a>
              </div>
            </div>
          </div>

        </div>

        <h3>Recent Users</h3>
        <div class="table-responsive mb-4">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>

              </tr>
            </thead>
            <% users.forEach(element => { %>
              <tr>
                <td><%=element.name%></td>  
                <td><%=element.email%></td>  
              </tr>
           <% });  %>
            <tbody>

             
                
            </tbody>
          </table>
          <a href="/admin/users" class="btn btn-sm btn-outline-primary">View All Users</a>
        </div>

        <h3>Recent Posts</h3>
        <div class="table-responsive mb-4">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Email</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
                <% posts.forEach(element => { %>
                 
                  <tr>
                    <td><%=element.title %></td>
                    <td><%=element.createdBy.name%></td>
                    <td><%=element.createdBy.email%></td>
                    <td><%=element.Date.toLocaleDateString()%></td>
                  </tr>
                  <% }) %>
                  

            </tbody>
          </table>
          <a href="/admin/posts" class="btn btn-sm btn-outline-primary">View All Posts</a>
        </div>

        <h3>Recent Requirements</h3>
        <div class="table-responsive mb-4">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Heading</th>
                <th>Posted By</th>
                <th>Email</th>
                <th>Price</th>
                <th>Quantity</th>
              </tr>
            </thead>
            <tbody>
              <%requirements.forEach(element => { %>
                <tr>
                  <td><%=element.heading%></td>  
                  <td><%=element.user.name%></td>  
                  <td><%=element.user.email%></td>  
                  <td><%=element.price%></td>  
                  <td><%=element.quantity%></td>  
                </tr>
             <% }); %>
             
       
            
            </tbody>
          </table>
          <a href="/admin/requirements" class="btn btn-sm btn-outline-primary">View All Requirements</a>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
