<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registration Page | MeetTheMakers</title>
  <link rel="stylesheet" href="/styles/mainPages/signup.css">
  <link rel="stylesheet" href="/styles/partialStyle/flashcard.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
  <%-include('./partials/navbar')%>  

  <section class="signup-container">
    <div class="form">
      <div class="form-content">
        <header class="heading">Create Your Account</header>

        <form action="/signup" method="post" id="signup-form">
          <div class="fields">
            <!-- Name Field -->
            <div class="field">
              <div class="head">
                <i class="fas fa-user"></i>
                Full Name
              </div>
              <div class="input-field">
                <input type="text" placeholder="Enter your full name" class="input" name="name" id="name" required>
              </div>
              <b><label id="FirstNameForm" class="forms"></label></b>
            </div>

            <!-- Email Field -->
            <div class="field">
              <div class="head">
                <i class="fas fa-envelope"></i>
                Email Address
              </div>
              <div class="input-field">
                <input type="email" placeholder="Enter your email address" class="input" name="email" id="email" required>
              </div>
              <b><label id="emailForms" class="forms"></label></b>
            </div>

            <!-- Password Field -->
            <div class="field">
              <div class="head">
                <i class="fas fa-lock"></i>
                Password
              </div>
              <div class="input-field">
                <input type="password" placeholder="Create a strong password" class="input" name="password" id="password" required>
                <span class="password-toggle" id="password-toggle">
                  <i class="far fa-eye"></i>
                </span>
              </div>
              <b><label id="passwordForm" class="forms"></label></b>
            </div>

            <!-- Confirm Password Field -->
            <div class="field">
              <div class="head">
                <i class="fas fa-check-circle"></i>
                Confirm Password
              </div>
              <div class="input-field">
                <input type="password" placeholder="Confirm your password" class="input" name="cpassword" id="cpassword" required>
                <span class="password-toggle" id="cpassword-toggle">
                  <i class="far fa-eye"></i>
                </span>
              </div>
              <b><label id="cpasswordform" class="forms"></label></b>
            </div>

            <!-- Address Fields -->
            <div class="field">
              <div class="head">
                <i class="fas fa-map-marker-alt"></i>
                Address 
              </div>
              <div class="input-field">
                <input type="text" placeholder="Street" class="input" name="street" id="street">
                <b><label id="streetForm" class="forms"></label></b>
              </div>
              <div class="input-field">
                <input type="text" placeholder="City" class="input" name="city" id="city">
                <b><label id="cityForm" class="forms"></label></b>
              </div>
              <div class="input-field">
                <input type="text" placeholder="State" class="input" name="state" id="state">
                <b><label id="stateForm" class="forms"></label></b>
              </div>
              <div class="input-field">
                <input type="text" placeholder="Postal Code" class="input" name="postalCode" id="postalCode">
                <b><label id="postalCodeForm" class="forms"></label></b>
              </div>
              <div class="input-field">
                <input type="text" placeholder="Country" class="input" name="country" id="country">
                <b><label id="countryForm" class="forms"></label></b>
              </div>
            </div>

            <!-- Hidden Role Field (default is 'user') -->
            <input type="hidden" name="role" value="user">

            <!-- Register Button -->
            <div class="field">
              <button type="submit" class="registerForm" id="register-btn" disabled>Create Account</button>
            </div>
          </div>

          <div class="login-link">
            Already have an account? <a href="/login">Log in</a>
          </div>
        </form>
      </div>
    </div>
  </section>
  <%-include('./partials/footer')%>
  <script src="/js/signup.js"></script>
  <script src="/js/flashcard.js"></script>
</body>
</html>