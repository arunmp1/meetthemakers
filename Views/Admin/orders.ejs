<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .sidebar {
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      z-index: 100;
      padding: 48px 0 0;
      box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    .sidebar-sticky {
      position: relative;
      top: 0;
      height: calc(100vh - 48px);
      padding-top: .5rem;
      overflow-x: hidden;
      overflow-y: auto;
    }
    .nav-link {
      color: #333;
    }
    .nav-link.active {
      color: #007bff;
    }
    .badge-paid {
      background-color: #28a745;
    }
    .badge-unpaid {
      background-color: #dc3545;
    }
    .badge-delivered {
      background-color: #28a745;
    }
    .badge-pending {
      background-color: #ffc107;
    }
  </style>
</head>
<body>
  <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/Admin">Admin Panel</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-nav">
      <div class="nav-item text-nowrap">
        <a class="nav-link px-3 text-white" href="/">Back to Site</a>
      </div>
    </div>
  </header>

  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="/Admin">
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Admin/users">
                Users
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Admin/posts">
                Posts
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Admin/requirements">
                Requirements
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Admin/comments">
                Comments
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Admin/contacts">
                Contact Messages
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Admin/orders">
                Orders
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Admin/products">
                Products
              </a>
            </li>
          </ul>
          <hr>
          <div class="px-3 py-3">
            <strong>Logged in as:</strong>
            <br>
            Siddhant<br>
            <a href="/logout" class="btn btn-sm btn-danger mt-2">Logout</a>
          </div>
        </div>
      </nav>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Order Management</h1>
        </div>

        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>User</th>
                <th>Date</th>
                <th>Total</th>
                <th>Payment Method</th>
                <th>Payment Status</th>
                <th>Delivery Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(order => { %>
                <tr>
                  <td><%= order._id %></td>
                  <td><%= order.user ? order.user.name : 'Unknown' %></td>
                  <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                  <td>â‚¹<%= order.totalPrice.toFixed(2) %></td>
                  <td><%= order.paymentMethod %></td>
                  <td>
                    <span class="badge <%= order.isPaid ? 'badge-paid text-bg-success' : 'badge-unpaid text-bg-danger' %>">
                      <%= order.isPaid ? 'Paid' : 'Unpaid' %>
                    </span>
                    <% if (order.isPaid && order.paidAt) { %>
                      <small class="d-block"><%= new Date(order.paidAt).toLocaleDateString() %></small>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge <%= order.isDelivered ? 'badge-delivered text-bg-success' : 'badge-pending text-bg-warning' %>">
                      <%= order.isDelivered ? 'Delivered' : 'Pending' %>
                    </span>
                    <% if (order.isDelivered && order.deliveredAt) { %>
                      <small class="d-block"><%= new Date(order.deliveredAt).toLocaleDateString() %></small>
                    <% } %>
                  </td>
                  <td>
                    <div class="btn-group">
                      <a href="/Admin/order-details/<%= order._id %>" class="btn btn-sm btn-outline-primary">View</a>
                      <% if (!order.isDelivered) { %>
                        <a href="/Admin/orders/<%= order._id %>/mark-delivered" 
                           class="btn btn-sm btn-outline-success"
                           onclick="return confirm('Mark this order as delivered?')">
                          Mark Delivered
                        </a>
                      <% } %>
                      <a href="/Admin/orders/<%= order._id %>/delete" 
                         class="btn btn-sm btn-outline-danger"
                         onclick="return confirm('Are you sure you want to delete this order? This action cannot be undone.')">
                        Delete
                      </a>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
